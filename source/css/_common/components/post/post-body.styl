.post img {
  width: 65%;

  +mobile() {
    width: 100%;
  }
}

.post-body {
  font-family: $font-family-posts;
  word-wrap();

  a {
    color: $color-link;

    &:hover {
      color: $color-hover;
    }
  }

  +desktop() {
    text-align: unquote(hexo-config('text_align.desktop'));
  }

  +tablet-mobile() {
    text-align: unquote(hexo-config('text_align.mobile'));
  }

  h1, h2, h3, h4, h5, h6 {

    // Supported plugins: hexo-renderer-markdown-it hexo-renderer-marked
    .header-anchor, .headerlink {
      border-bottom-style: none;
      color: inherit;
      float: right;
      font-size: $font-size-small;
      margin-left: 10px;
      opacity: 0;

      &::before {
        font-family-icons('\f0c1');
      }
    }

    &:hover {
      .header-anchor, .headerlink {
        opacity: .5;

        &:hover {
          opacity: 1;
        }
      }
    }
  }

  h1, h3, h4, h5, h6 {
    padding-top: 10px;
  }

  h2 {
    padding-top: 30px;
  }


  .exturl .fa {
    font-size: $font-size-small;
    margin-left: 4px;
  }

  .image-caption, .figure .caption {
    color: $color-font;
    font-size: 15px;
    line-height: 1.2em;
    margin: 2px auto 12px;
    text-align: center;
  }

  iframe, video, embed {
    margin-bottom: 20px;
  }

  img {
    transition-duration: .4s;
    border: 1px solid rgba($color-font, 0.5);
  }

  .video-container {
    height: 0;
    margin-bottom: 20px;
    overflow: hidden;
    padding-top: 75%;
    position: relative;
    width: 100%;

    iframe, object, embed {
      height: 100%;
      left: 0;
      margin: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }
  }
}

/* 文章加密插件 */
.hbe-input-container {
	margin: 2rem auto !important;
}

.hbe-input-container input {
	background: transparent !important;
	border: 1px solid $color-font !important;
	cursor: url($cursor-text),auto !important;
	color: $color-font !important;
}

.hbe-input-container .bottom-line {
	display: none !important;
}

.hbe-input-container label {
	color: $color-font !important;
	font-size: 16.6px !important;
	cursor: url($cursor-normal),auto !important;
}

.hbe-input-container input:focus + label,
.hbe-input-container input:not(:placeholder-shown) + label {
  -webkit-transform: translate(0) scale(1) !important;
  transform: translate(0) scale(1) !important;
}

.hbe-button {
	text-shadow: none !important;
	-webkit-appearance: none !important;
	background: rgba($color-block, 0.1) !important;
	color: $color-font !important;
	border: 1px solid rgba($color-font, 0.8) !important;
	border-radius: $btn-default-radius;
	box-shadow: 0 1px 3px rgba($color-font, 0.3) !important;
	font-weight: 400 !important;
  font-size: $font-size-small !important;
	text-align: center !important;
	padding-left: 1px;
	margin: 4rem auto 0 !important;
  transition: background-color $transition-ease;
	transition-duration: .2s;
  outline:none;

		&:hover {
		background: $color-hover !important; 
		color: $color-block !important;
    border-color: rgba($color-font, 0.5)
	}
}

.hbe-button:after {
	border: 0 solid transparent !important;
}