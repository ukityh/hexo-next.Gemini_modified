.header-inner {
  background: rgba($color-block, $post-block-opacity);
  border-radius: $border-radius-inner;
  box-shadow: $box-shadow-hover;
  //backdrop-filter: blur(15px) saturate(110%);
  width: $sidebar-desktop;
  transition-duration: .2s;

  &:hover {
      background-color: rgba($color-block, $post-hover-opacity);
  }

  +tablet-mobile() {
    border-radius: initial;
    width: auto;
  }
}

.main {
  // Make sure that .header and .main-inner are the same height
  // Required for .sidebar `position: sticky;`
  align-items: stretch;
  display: flex;
  justify-content: space-between;
  padding-top: 7px;
  main-container();

  if (hexo-config('sidebar.position') == 'right') {
    flex-direction: row-reverse;
  }

  +tablet-mobile() {
    display: block;
    width: auto;
  }
}

.main-inner {
  border-radius: $border-radius-inner;
  box-sizing: border-box;
  width: $content-wrap;

  +tablet-mobile() {
    border-radius: initial;
    width: 100%;
  }
}

.footer-inner {
  if (hexo-config('sidebar.position') == 'right') {
    padding-right: $sidebar-desktop + $sidebar-offset;
  } else {
    padding-left: $sidebar-desktop + $sidebar-offset;
  }

  +tablet-mobile() {
    padding-left: 0;
    padding-right: 0;
    width: auto;
  }
}
