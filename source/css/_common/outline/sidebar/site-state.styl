.site-state {
  flex-wrap();
  line-height: 1.4;
  position: relative;
  bottom: 2px;
}

.site-state-item {
  // Fix issue #103
  // The click area of the link becomes smaller
  padding: 0 15px;
  font-family: $font-family-headings;

  a {
    border-bottom: none;
    display: block;
  }
}

.site-state-item-count {
  display: block;
  font-size: $site-state-item-count-font-size;
  font-weight: 600;
}

.site-state-item-name {
  font-size: $site-state-item-name-font-size;
}
