.search-active {
  overflow: hidden;
}

.search-pop-overlay {
  background: rgba(0, 0, 0, 0);
  display: flex;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  transition: visibility .4s, background .4s;
  visibility: hidden;
  width: 100%;
  z-index: $zindex-4;

  .search-active & {
    background: rgba($color-font, .2);
    visibility: visible;
  }
}

.search-popup {
  background: rgba($color-block,.9);
  border-radius: 5px;
  height: 80%;
  margin: auto;
  transform: scale(0);
  transition: transform .4s;
  width: 700px;

  .search-active & {
    transform: scale(1);
  }

  +mobile() {
    border-radius: 0;
    height: 100%;
    width: 100%;
  }

  .search-icon, .popup-btn-close {
    color: $color-block;
    font-size: 18px;
    padding: 0 10px;
  }

  .popup-btn-close {
    cursor: url($cursor-pointer),auto !important;
    transition-diration: .2s

    &:hover .fa {
      transform: scale(1.15)
      -webkit-transform: scale(1.15)
      -ms-transform: scale(1.15)
      -o-transform: scale(1.15)
    }
  }

  .search-header {
    background: rgba($color-brand, 0.85);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    display: flex;
    padding: 6px 0 3px;
    transition-duration: .2s;

    &:hover {
      background: $color-brand !important;
      box-shadow: 0 0 5px rgba($color-brand, .5) !important;
    }
  }

  input.search-input {
    cursor: url($cursor-text),auto !important
    background: transparent;
    color: $color-block;
    border: 0;
    outline: 0;
    width: 100%;

    &::-webkit-search-cancel-button {
      display: none;
    }
  }

  .search-result-container {
    height: calc(100% - 55px);
    overflow: auto;
    padding: 5px 25px;

    hr {
      margin: 5px 0 10px;

      &:first-child {
        display: none;
      }
    }
  }

  .search-result-list {
    margin: 0 5px;
    padding: 0;
  }

  a.search-result-title {
    font-weight: bold;
    font-family: $font-family-headings;
    font-size: 19px;
  }

  p.search-result {
    border-bottom: 1px dotted $color-font;
    padding: 5px 0 15px;
    line-height: 1.8em;
    margin-bottom: 12px;
  }
}

if (hexo-config('algolia_search.enable')) {
  .search-input-container {
    flex-grow: 1;

    form {
      padding: 2px;
    }
  }

  .search-stats {
    align-items: center;
    display: flex;
    justify-content: space-between;

    img {
      height: 1em;
      margin: 0;
    }
  }

  .algolia-pagination {
    // Override default style of ul
    margin: 40px 0;
    opacity: 1;
    padding: 0;

    .pagination-item {
      display: inline-block;
    }

    .current .page-number {
      @extend .pagination .page-number.current;
      cursor: default;
    }

    .disabled-item {
      visibility: hidden;
    }
  }
}

if (hexo-config('local_search.enable')) {
  .search-popup {
    .search-input-container {
      cursor: url($cursor-text),auto !important;
      flex-grow: 1;
      padding: 2px;
    }

    .no-result {
      display: flex;
    }

    .search-result-list {
      width: 100%;
    }

    .search-result-icon {
      color: rgba($color-font,.5);
      margin: auto;
    }
  }

  mark.search-keyword {
    background: transparent;
    color: $red;
  }
}
